# OpenAI API key (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-key-here

# Gemini API key (required if LLM_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-key-here

# Groq API key (required if LLM_PROVIDER=groq)
GROQ_API_KEY=gsk_your_groq_key_here

# LLM Provider: "openai" (default), "gemini", or "groq"
LLM_PROVIDER=openai

# Optional: override the model (default: gpt-4o-mini / gemini-1.5-flash / llama-3.3-70b-versatile)
# OPENAI_MODEL=gpt-4o
# GEMINI_MODEL=gemini-1.5-pro
# GROQ_MODEL=llama-3.3-70b-versatile
# PORT=3001
